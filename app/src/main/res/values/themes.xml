<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/success_green</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/star_yellow</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor">@color/primary_green</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <!-- NoActionBar theme for activities with custom toolbars -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavigationTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_green</item>
    </style>

    <style name="BottomNavigationTextInactive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Card styles -->
    <style name="CardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CardStyle.Elevated">
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Button styles -->
    <style name="ButtonStyle">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ButtonStyle.Outlined">
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:background">@drawable/button_outlined</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ButtonStyle.Small">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text styles -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SubHeaderTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- EditText styles -->
    <style name="EditTextStyle">
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/edittext_rounded</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- FAB styles -->
    <style name="FABStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="tint">@android:color/white</item>
        <item name="android:layout_margin">16dp</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Kid-friendly styles -->
    <style name="KidHeaderTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="KidBodyTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="StarTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/star_yellow</item>
    </style>

    <!-- Icon styles -->
    <style name="IconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/text_secondary</item>
    </style>

    <style name="IconStyle.Large">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="IconStyle.Primary">
        <item name="tint">@color/primary_green</item>
    </style>

    <!-- Toolbar styles -->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary_green</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>
