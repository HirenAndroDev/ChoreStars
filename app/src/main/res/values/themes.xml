<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChoresApp" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange_primary</item>
        <item name="colorSecondaryVariant">@color/orange_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/green_primary</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.ChoresApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ButtonStyle.Primary">
        <item name="backgroundTint">@color/green_primary</item>
    </style>

    <style name="ButtonStyle.Secondary">
        <item name="backgroundTint">@color/orange_primary</item>
    </style>

    <style name="ButtonStyle.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/green_primary</item>
        <item name="strokeColor">@color/green_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle.Title" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextStyle.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/green_primary</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/green_primary</item>
        <item name="itemTextColor">@color/green_primary</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/green_primary</item>
        <item name="navigationIconTint">@color/white</item>
    </style>
</resources>
