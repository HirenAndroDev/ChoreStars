<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_kid_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Large Task Icon -->
        <ImageView
            android:id="@+id/iv_task_icon_large"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/light_yellow"
            android:padding="20dp"
            android:src="@drawable/ic_task_default" />

        <!-- Task Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_task_name_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brush Teeth"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tv_star_reward_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="+2 ⭐"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/star_yellow" />

        </LinearLayout>

        <!-- Complete Button -->
        <Button
            android:id="@+id/btn_complete_task"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:text="Mark Done"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded"
            android:backgroundTint="@color/success_green"
            android:paddingHorizontal="20dp"
            android:elevation="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
