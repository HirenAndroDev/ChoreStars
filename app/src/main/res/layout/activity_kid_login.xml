<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Welcome Icon -->
    <ImageView
        android:id="@+id/iv_welcome_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_child"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/success_green"
        android:padding="24dp"
        app:tint="@android:color/white" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tv_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Hi there! What's your name?"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <!-- Input Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Name Input Section -->
            <LinearLayout
                android:id="@+id/layout_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_child_name"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/edittext_rounded"
                    android:gravity="center"
                    android:hint="Enter your name"
                    android:inputType="textPersonName|textCapWords"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:maxLength="20" />

            </LinearLayout>

            <!-- Code Input Section -->
            <LinearLayout
                android:id="@+id/layout_code_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Family Code"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_invite_code"
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/edittext_rounded"
                    android:gravity="center"
                    android:hint="000000"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:letterSpacing="0.3" />

            </LinearLayout>

            <!-- Action Button -->
            <Button
                android:id="@+id/btn_join"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:text="NEXT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/success_green"
                android:elevation="6dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Decorative Stars -->
    <LinearLayout
        android:id="@+id/layout_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_star"
            app:tint="@color/star_yellow"
            android:alpha="0.8" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_star"
            app:tint="@color/star_yellow" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_star"
            app:tint="@color/star_yellow"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Celebration Text (Hidden by default) -->
    <TextView
        android:id="@+id/tv_celebration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Welcome to the family!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/success_green"
        android:textAlignment="center"
        android:visibility="gone" />

</LinearLayout>