<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Reward Icon -->
    <ImageView
        android:id="@+id/iv_reward_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/light_yellow"
        android:padding="20dp"
        android:src="@drawable/ic_ice_cream" />

    <!-- Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Do you want to get this reward?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:textAlignment="center" />

    <!-- Reward Name -->
    <TextView
        android:id="@+id/tv_reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Ice Cream"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:textAlignment="center" />

    <!-- Cost Info -->
    <TextView
        android:id="@+id/tv_star_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Costs: 10 ⭐"
        android:textSize="16sp"
        android:textColor="@color/star_yellow" />

    <TextView
        android:id="@+id/tv_remaining_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You'll have: 15 ⭐ left"
        android:textSize="14sp"
        android:textColor="@color/text_secondary" />

</LinearLayout>
