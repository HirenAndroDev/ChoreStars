<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay_background"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:layout_margin="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/celebration_gradient"
            android:padding="32dp"
            android:gravity="center">

            <!-- Celebration Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_celebration"
                android:layout_marginBottom="16dp"
                android:contentDescription="Celebration" />

            <!-- Celebration Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎉 AWESOME! 🎉"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/celebration_title"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Task Completion Message -->
            <TextView
                android:id="@+id/tv_celebration_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great job completing\nyour task!"
                android:textSize="18sp"
                android:textColor="@color/celebration_text"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp" />

            <!-- Stars Earned -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/stars_earned_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_stars_earned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5 ⭐"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/stars_text" />

            </LinearLayout>

            <!-- Continue Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continue"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="Continue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/celebration_button"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>