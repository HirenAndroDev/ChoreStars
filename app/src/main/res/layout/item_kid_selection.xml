<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Profile Picture with Checkmark Overlay -->
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <!-- Circular Profile Picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_kid_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_avatar"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/light_gray" />

        <!-- Green Checkmark Overlay -->
        <ImageView
            android:id="@+id/iv_selection_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@id/iv_kid_avatar"
            android:layout_alignBottom="@id/iv_kid_avatar"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="-2dp"
            android:src="@drawable/ic_check_circle"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/success_green"
            android:padding="2dp"
            android:visibility="gone"
            app:tint="@android:color/white" />

    </RelativeLayout>

    <!-- Kid Name -->
    <TextView
        android:id="@+id/tv_kid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Kid Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Hidden checkbox for functionality -->
    <CheckBox
        android:id="@+id/cb_kid_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
